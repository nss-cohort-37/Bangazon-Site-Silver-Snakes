@model Bangazon.Models.OrderViewModels.OrderEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Complete your Order</h1>

<h4>Please select your payment type</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PaymentTypeId" class="control-label"></label>
               <select asp-for="PaymentTypeId" asp-items="@Model.PaymentTypeOptions" class="form-control">
                    <option disabled>Select a payment type</option>
                </select>
                <span asp-validation-for="PaymentTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

