@page
@model IndexModel

@{
    ViewData["Title"] = "Create";
    ViewData["ActivePage"] = ManageNavPages.PaymentType;
}

<h1>Payment Types</h1>
<p>
    <a asp-action="create" asp-controller="PaymentTypes">Add Payment Type</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                DateCreated
            </th>
            <th>
                Description
            </th>
            <th>
                AccountNumber
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var payment in Model.PaymentTypes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => payment.DateCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => payment.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => payment.AccountNumber)
                </td>
                <td>
                    <a asp-action="delete" asp-controller="PaymentTypes" asp-route-Id="@payment.PaymentTypeId">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
